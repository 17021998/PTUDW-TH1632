<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Editor-Info</title>
    <!--Bootstrap-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <!--Font awesome-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css">
    <!--StyleSheet-->
    <link rel="stylesheet" href="/css/editor/editor-style.css">
    <link rel="stylesheet" type="text/css" href="/css/admin/profile-adminCSS.css">
    <link rel="stylesheet" type="text/css" href="/css/admin/admin-style.css">
    <link rel="stylesheet" type="text/css" href="/css/editor/editor-style.css">
</head>

<body>
    <div id="page">
        <%- include('../logout/admin/form.ejs') %>
        <%- include('../header-footer/header-admin.ejs') %>
        <section id="page-main-content">
            <%- include('../logout/admin/header-hori.ejs') %>
            <div id="content">
                <div class="row">
                    <div class="col-12 py-2">
                        <h2>Quản lý người dùng</h2>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <div class="row">
                                    <div class="col my-auto">
                                        <div id="card-header-title">
                                            <h5>Chi tiết biên tập viên</h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card body">
                                <form class="d-flex flex-row content-form-view">
                                    <div class="col-md-12">
                                        <div id="content-form-img">
                                            <div id="profile-picture">
                                                <img src="/images/account.png">
                                            </div>                          
                                        </div>
                                        <div class="form-group col-md-12 row form-disable">
                                            <label for="inputHoTen" class="col-sm-2 col-form-label">Họ tên:</label>
                                            <input type="text" class="input-feild col-md-8" id="inputHoTen" value="Nguyễn Văn A" disabled>
                                        </div>
                                        <div class="form-group col-md-12 row form-disable">
                                            <label for="inputEmail" class="col-sm-2 col-form-label">Email liên lạc:</label>             
                                            <input type="email" class="input-feild col-md-8" id="inputEmail" value="ntquyen98@gmail.com" disabled>
                                        </div>  
                                        <div class="col-md-12 row form-disable">
                                            <legend class="col-form-label col-sm-2">Ngày sinh:</legend>
                                            <input type="text" class=" col-md-8" id="showDate" value="01/08/1998" disabled>
                                        </div>
                                        <div class="form-group col-md-12 row form-disable">
                                            <label class="col-sm-2 col-form-label ">Các chuyên mục quản lý:</label>
                                            <div class="col-md-4">
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="input-group w-100">
                                                            <input type="text" class="form-control" placeholder="Thêm danh mục">
                                                            <button class="btn btn-white" type="button"><i
                                                                    class="fas fa-plus"></i></button>
                                                        </div>
                                                    </div>

                                                    <ul>
                                                        <li>Quân sự</li>
                                                        <li>Chuyển động 24h</li>
                                                        <li>Bóng đá</li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>           
                                    </div>              
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <!--JQuery-->
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <!--Main Script-->
    <script src="/js/editor/main.js"></script>
</body>

</html>