<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Profile-Writer</title>
    <!--Bootstrap-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <!--Font awesome-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css">
    <!--StyleSheet-->
    <link href="/css/editor/editor-style.css" rel="stylesheet">
    <link href="/css/writer/profile-writerCSS.css" rel="stylesheet" type="text/css">
    <style>
        .pull-left p img{
            width: 150px !important;
            height: 120px !important;
        }
        hr.style13 {
            height: 10px;
            border: 0;
            box-shadow: 0 10px 10px -10px #8c8b8b inset;
        }
    </style>
</head>
<body>
    <div id="page">
            <%- include('../logout/writer/form.ejs') %>
            <%- include('../header-footer/header-writer.ejs') %>
            <section id="page-main-content">
                <%- include('../logout/writer/header-hori.ejs') %>
            <div id="content">
                <h1>
                    Danh sách các bài viết
                </h1>
                <hr>
                <div class="d-flex flex-row content-form-view">
                    <div class="col-12 container">
                        <ul class="media-list">
                            <% for( let index = 0; index < rows.length; index++ ) { %>
                                <div class="row">
                                    <div class="col-6">
                                        <li class="media">
                                            <a href="#">
                                                <a class="pull-left" href="#">
                                                    <%-rows[index].ImageAbstract%>
                                                    <p>
                                                        Khoa Học
                                                    </p>
                                                </a>
                                                <div class="media-body">
                                                    <%if(rows[index].ReleaseDay!=null){%>
                                                    <span class="text-muted pull-right">
                                                        <small class="text-muted">
                                                        Thời gian đăng: 
                                                            <strong> <%=rows[index].ReleaseDay%> </strong>
                                                        </small>
                                                    </span>
                                                    <%}%>
                                                    <br>
                                                    <strong class="text-success">
                                                        <%=rows[index].Title%>
                                                    </strong>
                                                    <p>
                                                        <%=rows[index].Abstract%>
                                                    </p>
                                                </div>
                                            </a>
                                        </li>
                                    </div>
                                    
                                    <div class="col-4">
                                    <%if(rows[index].Deny){%>
                                        <span>Lí Do: </span>
                                        <span>
                                        <%=rows[index].Deny%>
                                        </span>
                                    <%}%>
                                    </div>
                                    
                                    <%if(rows[index].PostStatus != 1){%>
                                    <span class="col-2 mt-5">
                                        <a href="/writer/editWriterPost?idP=<%=rows[index].ID%>&isAc=<%=isActive%>" role="button">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </span>
                                    <%}%>
                                </div>
                                <hr class="style13">
                            <% } %>
                        </ul>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="/css/editor/main.js"></script>
</body>

</html>